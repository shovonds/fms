
@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-init="allMenuList()">
        <div class="card">
            <div class="header">
                <h2>
                    New User
                    <small>Add user information</small>
                </h2>
            </div>
            <div class="body">
                <form id="form_validation" name="newUser" method="POST">
                    <h2 class="card-inside-title">User information</h2>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control" ng-model="newUser.username" placeholder="User Name" required autofocus>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control" ng-model="newUser.first_name" placeholder="First Name" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control" ng-model="newUser.last_name" placeholder="Last Name" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-md-3">
                            <p>
                                <b>User Role</b>
                            </p>
                            <select class="form-control show-tick" ng-options="menu.menu_name for menu in menuListAll" ng-model="sel">
                                <option value="" disabled selected>Select Role</option>
                            </select> 
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-md-3">
                            <div class="form-group">
                                <button class="btn btn-primary waves-effect" type="submit" ng-click="newUser.$valid&&addUser()">SAVE</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <h5>{{userStat}}</h5>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>





